<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>TaskSauce</title>

  <!-- Bootstrap core CSS -->
  <link href="static/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="static/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
  <link href="static/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template -->
  <link href="static/css/landing-page.min.css" rel="stylesheet">

</head>

<body>

  <!-- Navigation -->
  <%- include navbar.ejs -%>

  <!-- Image Showcases -->
  <section class="showcase">
    <div class="container-fluid p-0">
      <div class="row no-gutters">

        <div class="col-lg-12 offset-2">
          <form method ="POST" action = "index">
            <div class="form-group">
              <label for="job">Job Description:</label>
              <input type="job" class="form-control form-control-lg col-lg-6" id="job">
            </div>

            <div class="form-group">
              <label for="loc">Location:</label>
              <input type="loc" class="form-control form-control-lg col-lg-6" id="loc">
            </div>
            <div class="form-group">
              <label for="date">Date:</label>
              <input type="date" class="form-control form-control-lg col-lg-6" id="date">
            </div>

            <div class="form-group">
              <label for="time">Time:</label>
              <input type="time" class="form-control form-control-lg col-lg-6" id="time">
            </div>


            <div class="form-group">
              <label for="des">Description:</label>
              <textarea class="form-control form-control-lg col-lg-6" id="des" rows="6"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include footer.ejs -%>

  <!-- Bootstrap core JavaScript -->
  <script src="static/vendor/jquery/jquery.min.js"></script>
  <script src="static/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript">
    $(".form_datetime").datetimepicker({
        format: "dd MM yyyy - hh:ii"
    });
</script>           


</body>

</html>
