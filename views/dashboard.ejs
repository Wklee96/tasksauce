<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">
  
	<title>Task Sauce</title>
  
	<!-- Bootstrap core CSS -->
	<link href="static/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  
	<!-- Custom fonts for this template -->
	<link href="static/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
	<link href="static/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
  
	<!-- Custom styles for this template -->
	<link href="static/css/landing-page.min.css" rel="stylesheet">	

</head>
<body>
	<%- include navbar.ejs -%>


		<!-- Tables Tasks -->
	  <section class="tasks text-center bg-light">
		<div class="container">
			

		  <!-- Tables in 2 rows -->
		  <div class="row py-4">
			<div class="card mx-auto">
			  <h5 class="card-header">Tasks Requested</h5>
			  <div class="card-body">
				<div style="overflow-x:auto;">

					<!-- Search input form -->
					<form id="searchRequest" action="dashboard" method="POST">
						<div class="input-group mb-3">
							<input type="text" id="task_search" name='task_search' class="form-control" placeholder="Search for tasks..." aria-label="Example text with button addon" aria-describedby="button-addon1">
						</div>
					</form>

				  <table class="table table-striped" id="job_request_table">
					<thead>
					  <tr>
						<th scope="col">Task</th>
						<th scope="col">Location</th>
						<th scope="col">Date</th>
						<th scope="col">Time</th>
						<th scope="col">Description</th>
						<th scope="col">View</th>
					  </tr>
					</thead>
					<tbody>
					  <% for (var i=0; i < requests.length; i++) { %>
					  <tr>
						<td><%= requests[i].job %></td>
						<td><%= requests[i].loc %></td>
						<td><%= requests[i].date.toDateString() %></td>
						<td><%= requests[i].var %></td>
						<td><%= requests[i].desc %></td>
						<td><a href = "./viewRequestJob/<%= requests[i].job_id %>"> View </a></td>
					  </tr>
					  <% } %>
					</tbody>
				  </table>
				</div>
				</div>
				
			  <div class="card-body">
				<h6>In-Progress</h6>
				<div style="overflow-x:auto;">
				  <table class="table table-striped">
					<thead>
					  <tr>
						<th scope="col">Task</th>
						<th scope="col">Location</th>
						<th scope="col">Date</th>
						<th scope="col">Time</th>
						<th scope="col">Description</th>
						<th scope="col">View</th>
					  </tr>
					</thead>
					<tbody>
					  <% for(var i=0; i < requests.length; i++) { %>
					  <tr>
						<td><%= requests[i].job%></td>
						<td><%= requests[i].loc%></td>
						<td><%= requests[i].date.toDateString()%></td>
						<td><%= requests[i].var%></td>
						<td><%= requests[i].desc%></td>
						<td><a href = "./viewJob/request/<%= requests[i].job_id %>"> View </a></td>
	
					  </tr>
					  <% } %>
					</tbody>
				  </table>
				</div>
			  </div>
			</div>
		  </div>
	
		  <div class="row py-4">
			<div class="card mx-auto">
			  <h5 class="card-header">Tasks Offered</h5>
			  <div class="card-body">
				<div style="overflow-x:auto;">
				  <table class="table table-striped">
					<thead>
					  <tr>
						<th scope="col">Task</th>
						<th scope="col">Location</th>
						<th scope="col">Date</th>
						<th scope="col">Time</th>
						<th scope="col">Description</th>
						<th scope="col">View</th>
					  </tr>
					</thead>
					<tbody>
					  <% for(var i=0; i<offers.length; i++) { %>
					  <tr>
						<td><%= offers[i].job%></td>
						<td><%= offers[i].loc%></td>
						<td><%= offers[i].date.toDateString()%></td>
						<td><%= offers[i].var%></td>
						<td><%= offers[i].desc%></td>
						<td><a href = "./viewJob/offer/<%= offers[i].job_id %>"> View </a></td>
	
					  </tr>
					  <% } %>
					</tbody>
				  </table>
				</div>
				</div>
				
			  <div class="card-body">
				<h6>In-Progress</h6>
				<div style="overflow-x:auto;">
				  <table class="table table-striped">
					<thead>
					  <tr>
						<th scope="col">Task</th>
						<th scope="col">Location</th>
						<th scope="col">Date</th>
						<th scope="col">Time</th>
						<th scope="col">Description</th>
						<th scope="col">View</th>
					  </tr>
					</thead>
					<tbody>
					  <% for(var i=0; i<offers.length; i++) { %>
					  <tr>
						<td><%= offers[i].job%></td>
						<td><%= offers[i].loc%></td>
						<td><%= offers[i].date.toDateString()%></td>
						<td><%= offers[i].var%></td>
						<td><%= offers[i].desc%></td>
						<td><a href = "./viewJob/offer/<%= offers[i].job_id %>"> View </a></td>
	
					  </tr>
					  <% } %>
					</tbody>
				  </table>
				</div>
			  </div>
			</div>
			</div>
		</div>
	  </section>
	  <%- include footer.ejs -%>
</body>
</html>